<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.deshario.deshariocrud.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deshario Crud"
        android:textSize="20sp"
        android:layout_marginTop="-60dp"/>

    <Button
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_bootstrap"
        android:layout_marginTop="30dp"
        android:text="Create"
        android:textSize="18sp"
        android:textColor="@color/default_bootstrap"/>

    <Button
        android:id="@+id/rud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_success"
        android:layout_marginTop="15dp"
        android:text="Read, Update, Delete"
        android:textSize="18sp"
        android:textColor="@color/default_bootstrap"/>


</LinearLayout>
